<Window x:Class="Conneciton_status_WPF_.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Conneciton_status_WPF_"
        mc:Ignorable="d"
        Title="Settings" Height="500" Width="500"
        Loaded="SettingsWindow_Loaded"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <GroupBox Header="Ping" Height="147" VerticalAlignment="Top" Width="227" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center">
            <TextBox Height="23" Margin="44,46,51,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Name="TextBoxPingHost"/>
        </GroupBox>
        <GroupBox Header="GroupBox" Height="147" VerticalAlignment="Top" Width="227" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center"/>
        <GroupBox Header="GroupBox" Height="147" VerticalAlignment="Top" Width="227" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center"/>
        <GroupBox Header="GroupBox" Height="147" VerticalAlignment="Top" Width="227" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center"/>
        <Button Grid.Row="2" Grid.ColumnSpan="1" Grid.Column="1" Height="25" Width="75" Margin="162,122,10,10" Name="ButtonClose" Click="ButtonClose_Click">Close</Button>
        <Button Grid.Row="2" Grid.ColumnSpan="1" Grid.Column="1" Height="25" Width="75" Margin="82,122,90,10" Name="ButtonSave" Click="ButtonSave_Click">Save</Button>


    </Grid>
</Window>
